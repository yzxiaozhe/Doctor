<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#3f57f5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="诊断常见老年疾病"
            android:textColor="#ffff"
            android:textSize="35dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="322dp"
            android:layout_height="162dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/peitu" />

        <TextView
            android:id="@+id/test"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/home_yellow_draw"
            android:text="点此进入简单自我诊断>>"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#3f57f5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="常见老年疾病病情分析"
            android:textColor="#ffff"
            android:textSize="35dp" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="238dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:background="@drawable/home_yellow_draw"
            android:gravity="center"
            android:text="其他问题离线诊断>>" />

        <TextView
            android:id="@+id/gaoxueya"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/circle1"
            android:gravity="center"
            android:text="高血压" />

        <TextView
            android:id="@+id/tangniaobin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/gaoxueya"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle2"
            android:gravity="center"
            android:text="糖尿病" />

        <TextView
            android:id="@+id/guanxinbin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/gaoxueya"
            android:layout_marginEnd="33dp"
            android:background="@drawable/circle3"
            android:gravity="center"
            android:text="冠心病" />
    </RelativeLayout>


</LinearLayout>