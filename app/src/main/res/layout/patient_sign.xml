<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#3f57f5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="病人端用户登陆"
            android:textColor="#ffff"
            android:textSize="35dp" />

    </FrameLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="189dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/key"
            android:layout_marginTop="-16dp"
            android:layout_toEndOf="@+id/key"
            android:gravity="bottom"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="29dp"
            android:gravity="center"
            android:text="账号"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/key"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView15"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="密码"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/adm_put_in"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView15"
            android:layout_marginTop="-16dp"
            android:layout_toEndOf="@+id/textView15"
            android:gravity="bottom" />

        <Button
            android:id="@+id/patient_button"
            android:layout_width="62dp"
            android:layout_height="81dp"

            android:layout_alignTop="@+id/textView15"
            android:layout_toEndOf="@+id/editText"
            android:gravity="center"
            android:text="登陆"
            android:textSize="15dp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView15"
            android:layout_marginStart="-2dp"
            android:text="记住密码" />

        <TextView
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-9dp"
            android:layout_toEndOf="@+id/editText"
            android:gravity="center"
            android:text="忘记密码" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="221dp"
            android:layout_height="29dp"
            android:layout_centerInParent="true"
            android:background="#f54e4e"
            android:text="还没有账号？点击此处注册"
            android:textColor="#ffff"
            android:textSize="15dp"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="201dp">

        <ImageView
            android:id="@+id/xuexiaoban"
            android:layout_width="92dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/xuexiaoban" />

        <TextView
            android:layout_width="273dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:background="@drawable/home_yellow_draw"
            android:gravity="center"
            android:text="登陆之后请完善个人信息"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>